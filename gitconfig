[user]
  name = laurent
  email = laurent@bewie.org
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[core]
  pager = less -R
  editor = /usr/local/bin/vim

[gc]
auto = 0

[alias]
  poule = "!f() { echo 'cot cot'; }; f"
  pur = pull --rebase
  alias = config --get-regexp alias
  ci = commit -m
  st = status
  s = status -sb
  br = branch
  co = checkout
  df = diff
  cp = cherry-pick
  gb = branch
  gba= !git branch -a
  who = shortlog -s -n --
  ls = ls-files
  ds = diff --stat
  staged = diff --cached
  unstage = reset HEAD
  info = !git remote show origin
  ignored = "!git ls-files --others --exclude-standard"
  add = add -v
  poop = stash pop
  undo = git reset --soft HEAD^ # Le flag --soft va conserver les modifications dans le r√©pertoire de travail.
  rz = reset --hard HEAD #

  lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)[%an]%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  bewie = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)[%an]%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --committer bewie
  commiter = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)[%an]%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --committer
  log1 = log --pretty=oneline --abbrev-commit --decorate
  rev = merge --no-ff --no-commit
  last = log -1 HEAD

[diff]
  mnemonicPrefix = true
  submodule = log
  renames = true
  wordRegex = .

[fetch]
  recurseSubmodules = on-demand

[grep]
  extendedRegexp = true

[status]
  submoduleSummary = true
  showUntrackedFiles = all

[rerere]
  enabled = 1

[push]
  default = upstream

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true



