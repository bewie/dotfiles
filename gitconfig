[gc] 
auto = 0 

[alias] 
ci = commit 
st = status 
br = branch 
co = checkout 
df = diff 
cp = cherry-pick 
gb = branch 
gba= !git branch -a 
who = shortlog -s -n -- 
ds = diff --stat 
staged = diff --cached 
unstage = reset HEAD 
info = !git remote show origin 
ignored = "!git ls-files --others --exclude-standard" 
lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)[%an]%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative 

bewie = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)[%an]%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --committer bewie 

commiter = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)[%an]%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --committer 
log1 = log --pretty=oneline --abbrev-commit --decorate 
undo = git reset --soft HEAD^ # Le flag --soft va conserver les modifications dans le r√©pertoire de travail. 
last = log -1 HEAD rz = reset --hard HEAD # 
#grm = !git status | grep deleted | awk '{print \$3}' | xargs git rm # for LINUX only : auto rm all deleted 
where = "!git branch | grep \"^\\*\" | cut -d \" \" -f 2" # affiche la branch courante 
spull = !git svn rebase && git status sspull = !git stash && git svn rebase && git stash apply 
spush = !git svn dcommit && git status 
sspush = !git stash && git svn dcommit && git stash apply 
missings = "!git log --left-right --graph --cherry-pick --oneline master...remotes/origin/HEAD" 
svnmissings = "!git log --left-right --graph --cherry-pick --oneline master...remotes/trunk" 




wip = !"git add -A; git ls-files --deleted -z | xargs -0 -I {} git rm {}; git commit -m \"wip\""
unwip = !"git log -n 1 | grep -q -c wip && git reset HEAD~1"
patch = !"git format-patch origin/master.. -o ~/Dropbox/patches/"
rb = !"git wip;git rebase -i --autosquash origin/master;git unwip"
pr = !"git fetch;git wip;git rebase --stat origin/master;git unwip;git heads"
lost = !"git fsck | awk '/dangling commit/ {print $3}' | git show --format='SHA1: %C(yellow)%h%Creset %f' --stdin | awk '/SHA1/ {sub(\"SHA1: \", \"\"); print}'"
heads = !"git log origin/master.. --format='%Cred%h%Creset;%C(yellow)%an%Creset;%H;%Cblue%f%Creset' | git name-rev --stdin --always --name-only | column -t -s';'"


